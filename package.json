{
  "name": "wikimedia-glam-analytics-api",
  "version": "1.0.0",
  "description": "Wikimedia GLAM analytics API",
  "main": "build/index.js",
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:staged": "lint-staged",
    "build": "tsc && node resolve-module-alias.js",
    "start": "node build",
    "start:dev": "nodemon | pino-pretty --colorize",
    "pretest": "npm run build",
    "test": "jest --config .jest.json --coverage",
    "test:watch": "jest --config .jest.json --watch --verbose",
    "db:migrate": "node build/migrate.js",
    "db:up": "docker-compose up -d",
    "db:down": "docker-compose down",
    "db:delete": "docker-compose down -v"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yonathan06/wikimeida-glam-analytics-api.git"
  },
  "engines": {
    "node": "12.x.x"
  },
  "keywords": [
    "wikimedia",
    "GLAM",
    "analytics"
  ],
  "author": "Wikimedia Israel",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yonathan06/wikimeida-glam-analytics-api/issues"
  },
  "homepage": "https://github.com/yonathan06/wikimeida-glam-analytics-api#readme",
  "dependencies": {
    "@nearform/sql": "^1.4.0",
    "date-fns": "^2.14.0",
    "dotenv": "^8.2.0",
    "env-schema": "^1.1.0",
    "fastify": "^3.0.0",
    "fastify-cors": "^4.0.0",
    "fastify-now": "^2.2.0",
    "fastify-plugin": "^2.0.0",
    "fastify-postgres": "^3.0.1",
    "fastify-swagger": "^3.1.1",
    "fluent-schema": "^1.0.4",
    "http-errors": "^1.8.0",
    "jsonwebtoken": "^8.5.1",
    "node-fetch": "^2.6.0",
    "pg": "^8.3.0",
    "postgrator": "^4.0.1"
  },
  "devDependencies": {
    "@types/http-errors": "^1.8.0",
    "@types/jest": "^26.0.4",
    "@types/node": "^14.0.19",
    "@types/pg": "^7.14.3",
    "@typescript-eslint/eslint-plugin": "^3.6.0",
    "@typescript-eslint/parser": "^3.6.0",
    "eslint": "^7.4.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "faker": "^4.1.0",
    "jest": "^26.1.0",
    "lint-staged": "^10.2.11",
    "nodemon": "^2.0.4",
    "nyc": "^15.1.0",
    "pino-pretty": "^4.0.0",
    "prettier": "^2.0.5",
    "typescript": "^3.9.6"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  }
}
